{
  "private": true,
  "name": "common-ui",
  "scripts": {
    "clean": "lerna clean && rm -rf node_modules",
    "format": "prettier --write --ignore-path .gitignore \"**/*.{js,json,css,scss,md,yml}\"",
    "lint": "yarn lint:js && yarn lint:styles",
    "lint:js": "eslint --ignore-path .gitignore --ignore-pattern \"packages/legacy-*\" \"packages/**/*.js\"",
    "lint:styles": "stylelint --ignore-path .gitignore \"packages/**/*.js\"",
    "release": "yarn lint && yarn test && lerna publish",
    "report-coverage": "cat coverage/lcov.info | coveralls",
    "test": "jest --coverage"
  },
  "workspaces": [
    "packages/*"
  ],
  "dependencies": {
    "@babel/core": "^7.3.4",
    "@babel/plugin-transform-runtime": "^7.3.4",
    "@babel/runtime": "^7.3.4",
    "@reach/router": "^1.2.1",
    "@spraoi/auth": "^0.19.0",
    "@spraoi/babel-preset": "^0.19.0",
    "@spraoi/helpers": "^0.19.0",
    "apollo-client": "^2.5.1",
    "aws-amplify": "^1.1.22",
    "babel-core": "^7.0.0-bridge",
    "babel-plugin-styled-components": "^1.10.0",
    "babel-preset-gatsby": "^0.1.8",
    "buffer": "^4.9.1",
    "gatsby": "^2.1.23",
    "graphql": "^14.1.1",
    "prop-types": "^15.7.2",
    "react": "^16.8.4",
    "react-apollo": "^2.5.2",
    "react-dom": "^16.8.4",
    "react-ga": "^2.5.7",
    "react-helmet": "^5.2.0",
    "react-redux": "^6.0.1",
    "react-router-dom": "^4.3.1",
    "react-spinners": "^0.5.3",
    "redux": "^4.0.1",
    "redux-saga": "^1.0.2",
    "styled-components": "4.1.4-alpha.6"
  },
  "devDependencies": {
    "@spraoi/eslint-config": "^0.19.0",
    "@spraoi/jest-config": "^0.19.0",
    "@spraoi/stylelint-config": "^0.19.0",
    "coveralls": "^3.0.3",
    "eslint": "^5.15.1",
    "jest": "^24.1.0",
    "lerna": "^3.13.1",
    "prettier": "^1.16.4",
    "stylelint": "^9.10.1"
  },
  "resolutions": {
    "gatsby/**/graphql": "^0.13.2"
  }
}
