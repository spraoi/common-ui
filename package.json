{
  "private": true,
  "name": "common-ui",
  "scripts": {
    "clean": "lerna clean && rm -rf node_modules",
    "format": "prettier --write --ignore-path .gitignore \"**/*.{js,json,css,scss,md,yml}\"",
    "lint": "yarn lint:js && yarn lint:styles",
    "lint:js": "eslint --ignore-path .gitignore \"packages/**/*.js\"",
    "lint:styles": "stylelint --ignore-path .gitignore \"packages/**/*.js\"",
    "release": "yarn lint && yarn test && lerna publish",
    "report-coverage": "cat coverage/lcov.info | coveralls",
    "test": "jest --coverage"
  },
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@babel/core": "^7.2.0",
    "@babel/plugin-transform-runtime": "^7.2.0",
    "@babel/runtime": "^7.2.0",
    "@spraoi/auth": "^0.17.0",
    "@spraoi/babel-preset": "^0.17.0",
    "@spraoi/eslint-config": "^0.17.0",
    "@spraoi/helpers": "^0.17.0",
    "@spraoi/jest-config": "^0.17.0",
    "@spraoi/stylelint-config": "^0.17.0",
    "apollo-client": "^2.4.7",
    "aws-amplify": "^1.1.12",
    "aws-appsync": "^1.5.2",
    "aws-appsync-react": "^1.2.3",
    "babel-core": "^7.0.0-bridge",
    "babel-plugin-styled-components": "^1.9.2",
    "babel-preset-gatsby": "^0.1.6",
    "coveralls": "^3.0.2",
    "eslint": "^5.9.0",
    "gatsby": "^2.0.63",
    "graphql": "^14.0.2",
    "jest": "^23.6.0",
    "lerna": "^3.5.1",
    "prettier": "^1.15.3",
    "prop-types": "^15.6.2",
    "react": "^16.6.3",
    "react-apollo": "^2.3.2",
    "react-dom": "^16.6.3",
    "react-helmet": "^5.2.0",
    "react-spinners": "^0.4.7",
    "styled-components": "^4.1.2",
    "stylelint": "^9.9.0"
  }
}
