{
  "private": true,
  "scripts": {
    "clean": "lerna clean && rm -rf node_modules",
    "lint": "eslint \"packages/**/*.js\"",
    "lint:fix": "eslint --fix \"packages/**/*.js\"",
    "release": "yarn lint && yarn test && lerna publish",
    "report-coverage": "cat coverage/lcov.info | coveralls",
    "test": "spraoi-test --coverage"
  },
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@spraoi/lint": "^0.3.0",
    "@spraoi/test": "^0.3.0",
    "aws-amplify": "^1.1.10",
    "coveralls": "^3.0.2",
    "eslint": "^5.9.0",
    "lerna": "^3.4.3",
    "prettier": "^1.15.2",
    "prop-types": "^15.6.2",
    "react": "^16.6.3",
    "react-dom": "^16.6.3"
  }
}
