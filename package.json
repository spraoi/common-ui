{
  "private": true,
  "scripts": {
    "clean": "lerna clean && rm -rf node_modules",
    "format": "prettier --write \"*.{js,json,md}\" \"packages/**/*.{js,json,css,scss,md}\"",
    "lint": "yarn lint:js && yarn lint:styles",
    "lint:js": "eslint --ignore-path .gitignore \"packages/**/*.js\"",
    "lint:styles": "stylelint --ignore-path .gitignore \"packages/**/*.js\"",
    "release": "yarn lint && yarn test && lerna publish",
    "report-coverage": "cat coverage/lcov.info | coveralls",
    "test": "jest --coverage"
  },
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@spraoi/babel-preset": "^0.12.0",
    "@spraoi/eslint-config": "^0.12.0",
    "@spraoi/jest-config": "^0.12.0",
    "@spraoi/stylelint-config": "^0.12.0",
    "coveralls": "^3.0.2",
    "eslint": "^5.9.0",
    "jest": "^23.6.0",
    "lerna": "^3.4.3",
    "prettier": "^1.15.2",
    "react": "^16.6.3",
    "react-dom": "^16.6.3",
    "stylelint": "^9.8.0"
  }
}
