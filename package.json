{
  "private": true,
  "scripts": {
    "clean": "lerna clean && rm -rf node_modules",
    "lint": "yarn lint:js && yarn lint:styles",
    "lint:js": "eslint \"packages/**/*.js\"",
    "lint:styles": "stylelint \"packages/**/*.(js|scss|css)\"",
    "new-package": "scripts/new-package.sh",
    "release": "yarn lint && yarn test && lerna publish",
    "report-coverage": "cat coverage/lcov.info | coveralls",
    "test": "jest --coverage"
  },
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@spraoi/babel-preset": "^0.6.1",
    "@spraoi/eslint-config": "^0.6.0",
    "@spraoi/jest-config": "^0.6.0",
    "@spraoi/stylelint-config": "^0.6.0",
    "aws-amplify": "^1.1.10",
    "coveralls": "^3.0.2",
    "eslint": "^5.9.0",
    "jest": "^23.6.0",
    "lerna": "^3.4.3",
    "prettier": "^1.15.2",
    "prop-types": "^15.6.2",
    "react": "^16.6.3",
    "react-dom": "^16.6.3",
    "styled-components": "^4.1.1",
    "stylelint": "^9.8.0"
  }
}
